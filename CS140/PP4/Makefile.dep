ifdef SIMOS
# SGI, instruction set = MIPS, OS = IRIX
HOST = -DSGIMIPS -DIRIX -DHOST_IS_BIG_ENDIAN -D_MIPS_SZINT=32 \
        -D_MIPS_SZLONG=32 -DMIPS_SZPTR=32 -DSIMOS -DNO_MPROT -DR4000=1 \
        -D_MIPSEB -D_MIPS_SIM=_MIPS_SIM_ABI32

LDFLAGS = -static -Ttext 80003000 -N -G 8 -nostartfiles -e start -lc
ASFLAGS = 
CPP_AS_FLAGS = -B -D_MIPSEB -DLANGUAGE_ASSEMBLY -B_ASM
else
# SUN SPARC, Solaris 2.4
HOST = -DSPARC -DSOLARIS -DHOST_IS_BIG_ENDIAN -DHOST_SVR4
CPP = /usr/ccs/lib/cpp
CPP_AS_FLAGS = -D_ASM
LDFLAGS = -lsocket -lnsl
endif


